{# Neemt de rest van _layout over #}
{% extends '_layout.twig' %}

{% block content %}
<main class="mt-5">
    {# Hero Video Section #}
    <section class="intro-section container d-flex justify-content-center flex-column gap-5 mt-5 mb-5 pb-5">
        {# Hero Video #}
        {% set heroSectionEntries = craft.entries().section('heroVideoSection').one %}
        <iframe src="{{heroSectionEntries.videoHeader}}controls=0&autoplay=1&mute=1&loop=1"></iframe>
        {# Intro Text Section #}
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="col-3 lh-base">{{heroSectionEntries.sectionHeader}}</h2>
            <div class="col-4">
                <p class="lh-lg">{{heroSectionEntries.articleParagraph}}</p>
                <a href="https://www.youtube.com/@treesdontneedus" target="_blank"><button type="button" class="btn btn-primary">Watch on YouTube</button></a>
            </div>
        </div>
    </section>
    {# Trees Section #}
    <section class="trees-section mt-5 mb-5 pt-5 pb-5">
        <div class="section-header container d-flex justify-content-between align-items-center pb-4">
        {% set homeSliderSection = craft.entries().section('homeSliderSection').one %}
            <h3>{{ homeSliderSection.sectionHeader }}</h3>
            <a href="">All trees</a>
        </div>
        {# Glides Container #}
        <div class="glide mt-5 d-flex flex-column">
            <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    {% set treesEntries = craft.entries().section('treesArticles').limit(5).all() %}
                    {% for treesEntry in treesEntries %}
                    <li class="glide__slide">
                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="{{ treesEntry.treeThumbnail.one().url('thumbnail') }}" class="img-fluid rounded-start" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <p class="card-text"><small class="text-body-secondary">{{ treesEntry.plantFamily }}</small></p>
                                        <h5 class="card-title">{{ treesEntry.botanicalName }}</h5>
                                        <p class="card-text">{{ treesEntry.title }}</p>
                                        <a href="#" class="card-link">Explore More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            {# Slider Controles #}
            <div class="glide__arrows d-flex gap-3 align-self-center mt-5" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left btn btn-primary btn-sm" data-glide-dir="<">prev</button>
                <button class="glide__arrow glide__arrow--right btn btn-secondary btn-sm" data-glide-dir=">">next</button>
            </div>
        </div>
    </section>
    {# About Section #}
    <section class="trees-section container mt-5 mb-5 pt-5 pb-5">
        <div class="section-header container d-flex justify-content-between align-items-center pb-4">
            {% set homeAbout = craft.entries().section('homeAboutSection').one %}
            <h3>{{ homeAbout.sectionHeader }}</h3>
            <a href="">Read More</a>
        </div>
        <div class="d-flex flex-column gap-3">
            {% set aboutEntries = craft.entries().section('aboutArticles').limit(2).all() %}
            {% for aboutEntry in aboutEntries %}
            <div class="d-flex align-items-center justify-content-center mt-5">
                <div class="col-5">
                    <img src="{{ aboutEntry.articleBanner.one().url('articleMedia') }}" />
                </div>
                <div class="col-5 d-flex flex-column gap-3">
                    <h4>{{ aboutEntry.title }}</h4>
                    <p>{{ aboutEntry.articleIntro }}</p>
                    <a href="">Read More</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
</main>
{% endblock %}
