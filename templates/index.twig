{# Neemt de rest van _layout over #}
{% extends '_layout.twig' %}

{% block content %}
<main class="container mt-5">
    {# Hero Video Section #}
    <section class="intro-section d-flex justify-content-center flex-column gap-5">
        {# Hero Video #}
        {% set heroSectionEntries = craft.entries().section('heroVideoSection').one %}
        <iframe src="{{heroSectionEntries.videoHeader}}controls=0&autoplay=1&mute=1&loop=1"></iframe>
        {# Intro Text Section #}
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="col-3 lh-base">{{heroSectionEntries.sectionHeader}}</h2>
            <div class="col-4">
                <p class="lh-lg">{{heroSectionEntries.sectionParagraph}}</p>
                <a href="https://www.youtube.com/@treesdontneedus" target="_blank"><button type="button" class="btn btn-primary">Watch on YouTube</button></a>
            </div>
        </div>
    </section>
    {# Trees Section #}
    <section class="mt-5">
        <div class="glide">
            <div div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
                    {% set treesEntries = craft.entries().section('treesSection').limit(5).all() %}
                    {% for treesEntry in treesEntries %}
                    <li class="glide__slide">
                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                <img src="{{ treesEntry.treeThumbnail.one().url('') }}" class="img-fluid rounded-start" alt="...">
                                </div>
                                <div class="col-md-8">
                                <div class="card-body">
                                    <p class="card-text"><small class="text-body-secondary">{{ treesEntry.plantFamily }}</small></p>
                                    <h5 class="card-title">{{treesEntry.botanicalName }}</h5>
                                    <p class="card-text">{{ treesEntry.title }}</p>
                                    <a href="#" class="card-link">Explore More</a>
                                </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            {# Slider Controles #}
            <div class="glide__arrows" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
                <button class="glide__arrow glide__arrow--right" data-glide-dir=">">next</button>
            </div>
        </div>
    </section>
</main>
{% endblock %}
