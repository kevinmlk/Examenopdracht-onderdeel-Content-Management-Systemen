        <a href="https://www.wearexd.be/" target="_blank" id="XD-link" class="footer-link">#WeAreXD</a>
      </div>
  </footer>
{# JS script links #}
<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
<script>
  const config = {
    type: 'carousel',
    startAt: 0,
    perView: 3,
